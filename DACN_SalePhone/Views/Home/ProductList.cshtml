
@{
    ViewBag.Title = "ProductListByCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DACN_SalePhone.Models
@model DACN_SalePhone.Models.ProductListByCategories
@{
    var cateSeries = ViewBag.cateSeries;
}
<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="Index">Home</a>
                    <i>|</i>
                </li>
                <li>
                    <a href="@Url.Action("ProductListByCategories","Home",new {cateID = cateSeries.cateID})">@cateSeries.cateSeries</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- //page -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>M</span>obiles
            <span>&</span>
            <span>C</span>omputers
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product  -->
            <div class="agileinfo-ads-display">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <div class="row">
                            @foreach (var item in Model.productsInfo)
                            {
                                <div class="col-md-3 product-men">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="@item.productIcon" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href=" @Url.Action("ProductDetail", "Home", new { prodId = item.productID }) " class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("ProductDetail", "Home", new { prodId = item.productID })">@item.productName</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.productPrice  VND</span>
                                                <del>@item.productReprice  VND</del>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                <form action="#" method="post">
                                                    <div class="quantity_title">
                                                        <i class="fas fa-cart-plus" style="color: #0879c9; font-size: 24px;padding-right: 15px;"></i> Quantity :
                                                    </div>
                                                    <div class="invert" style="padding: 20px 0px;">
                                                        <div class="quantity">
                                                            <div class="quantity-select">
                                                                <div class="entry value-minus">&nbsp;</div>
                                                                <div class="entry value">
                                                                    <span>1</span>
                                                                </div>
                                                                <div class="entry value-plus active">&nbsp;</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <fieldset>
                                                        <input type="submit" name="submit" value="Add to cart" class="button btn" />
                                                    </fieldset>
                                                </form>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>
                    <!-- //first section -->
                </div>
            </div>
            <!-- //product  -->
        </div>
    </div>
</div>
<!-- //top products -->
