@model IEnumerable<DACN_SalePhone.Models.ShoppingCart>
@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int TotalAmount = 0;
}
@using (Html.BeginForm("AddOrder", "Shopping", FormMethod.Post))
{

    <!-- payment page-->
    <div class="privacy py-sm-5 py-4">
        <div class="container py-xl-4 py-lg-2">
            <!-- tittle heading -->
            <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
                <span>P</span>ayment
            </h3>
            <!-- //tittle heading -->
            <div class="checkout-right">
                <!--Horizontal Tab-->
                <div id="parentHorizontalTab">
                    <div class="header">
                        <ul class="resp-tabs-list hor_1">
                            <li>Order Detail</li>
                            <li>Customer Information</li>
                            <li>Bill</li>
                        </ul>
                    </div>
                    
                    <div class="resp-tabs-container hor_1">
                        <div>
                            <h4 class="mb-sm-4 mb-3">
                                @*Your shopping cart contains:
                                @if (Session["CartCounter"] == null)
                                {
                                    <span>0 Products</span>
                                }
                                else
                                {

                                    <span> @Session["CartCounter"] Products</span>

                                }*@
                                Please check your order :

                            </h4>
                            <div class="table-responsive">
                                <table class="timetable_sub">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Product Name</th>

                                            <th>Price</th>
                                            <th>Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Session["CartCounter"] == null)
                                        {

                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                TotalAmount += item.scTotal;
                                                <tr class="rem1">
                                                    <td class="invert">@item.scproductID</td>
                                                    <td class="invert-image">
                                                        <a href="@Url.Action("ProductListByCategories", "Home")">
                                                            <img src="@item.scIcon" alt=" " class="img-responsive">
                                                        </a>
                                                    </td>
                                                    <td class="invert">
                                                        <div class="quantity">
                                                            <div class="quantity-select">
                                                                <div class="entry value-minus" name="UpdateQuantity" id="btn-minus" data-itemid="@item.scproductID" itemscope>&nbsp;</div>
                                                                <div class="entry value">
                                                                    <span>@item.scQuantity</span>
                                                                </div>
                                                                <div class="entry value-plus active" name="UpdateQuantity" id="btn-plus" data-itemid="@item.scproductID" itemscope>&nbsp;</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="invert">@item.scproductName</td>
                                                    <td class="invert" id="updateTotalItem">@item.scUnitPrice  VND</td>
                                                    <td class="invert">
                                                        <div class="rem">
                                                            <input type="button" name="AddToCart" value="" id="btnClose" class="close" data-itemid="@item.scproductID" itemscope/>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }


                                    </tbody>
                                    <tbot>

                                    </tbot>
                                </table>
                            </div>
                        </div>
                        <div>
                            <form action="#" method="post" class="creditly-card-form agileinfo_form">
